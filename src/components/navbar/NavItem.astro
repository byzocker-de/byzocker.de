---
export interface Props {
  url: string;
  text: string;
}

const { url, text } = Astro.props;
---

<style>
  span{
    color: var(--nav-color);
    /* margin: .5em; */
    padding: .75em;
  }
  .a-link::before,
  .a-link {
    text-decoration: none;
    color: inherit;
    font-stretch: expanded;
    font-weight: 500;
    transition: 0.2s;
  }
  .a-link {
    background-color:var(--nav-highlight);
    border-radius: 50px;
   padding: .5em;
   padding-left: .75em;
   padding-right: .75em;
  }
  .a-link:hover {
    background-color: var(--highlight);

    color: white;
  }
